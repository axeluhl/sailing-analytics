<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme using Material Design here. -->
        <item name="buttonStyle">@style/shadowLessButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/shadowLessButtonStyleAlertDialog</item>
        <item name="android:colorPrimaryDark">@color/fiori_primary_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_color</item>
    </style>

    <style name="shadowLessButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_text_colors</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="shadowLessButtonStyleAlertDialog" parent="@style/shadowLessButtonStyle">
        <item name="android:textColor">@drawable/button_text_colors_alert_dialog</item>
    </style>

</resources>
