<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dark" parent="AppTheme.Dark.Base">
        <item name="android:colorPrimary">@color/dark_colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/dark_colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Dark.AlertDialog.v21</item>
    </style>

    <style name="AppTheme.Dark.AlertDialog.v21" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/dark_colorAccent</item>
    </style>

    <style name="AppTheme.Dark.Button">
        <item name="android:textColor">@color/constant_black</item>
        <item name="android:background">@drawable/button_dark_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Dark.Round">
        <item name="android:background">@drawable/round_button_ripple</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>