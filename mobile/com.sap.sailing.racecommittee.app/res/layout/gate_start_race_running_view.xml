<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/raceCountUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentlyLoading"
        android:textAppearance="@style/TextAppearance.Welter.ExtraBigTitleLabel" />

    <TextView
        android:id="@+id/nextFlagCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel"
        android:textIsSelectable="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/flagDisplaySpaceLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.618"
            android:gravity="fill_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/upFlagsSpace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/currentlyDisplayedFlag"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/start_mode_flag"
                    android:src="@drawable/golf_flag" />

                <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                    android:id="@+id/flagsUpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/flags_up"
                    android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/downFlagsSpace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/flagToBeDisplayed"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:contentDescription="@string/start_mode_flag"
                    android:src="@drawable/golf_flag" />

                <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                    android:id="@+id/flagsDownLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/flags_down"
                    android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#DADADA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/firstSubstituteButton"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:contentDescription="@string/choose_first_substitute_flag"
                android:scaleType="fitCenter"
                android:src="@drawable/first_substitute_flag" />

            <TextView
                android:id="@+id/ChooseFirstSubstituteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:text="@string/choose_first_substitute_flag"
                android:textAppearance="@style/TextAppearance.Welter.TitleLabel" />

            <ImageButton
                android:id="@+id/blueFlagButton"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:contentDescription="@string/choose_blue_flag"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_flag" />

            <TextView
                android:id="@+id/ChooseBlueFlagLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:text="@string/choose_blue_flag"
                android:textAppearance="@style/TextAppearance.Welter.TitleLabel" />

            <ImageButton
                android:id="@+id/abortingFlagButton"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:contentDescription="@string/abort_running_race"
                android:scaleType="fitCenter"
                android:src="@drawable/ap_november_flag" />

            <TextView
                android:id="@+id/abortingFlagButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:text="@string/abort_running_race"
                android:textAppearance="@style/TextAppearance.Welter.TitleLabel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>