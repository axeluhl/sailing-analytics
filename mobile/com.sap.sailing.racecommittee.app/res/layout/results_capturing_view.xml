<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/welter_extralight_gray_transparent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Below nesting of layouts is needed to prevent the list from pushing the button outside the screen bounds -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/results_capturing_view_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/results_capturing_view_list_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/results_capturing_view_list_empty"
                    android:textSize="10pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/results_capturing_view_button_add_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_menu_camera"
                    android:text="@string/results_capturing_view_add_photo" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/results_capturing_view_camera_preview"
                android:layout_width="match_parent"
                android:layout_height="400dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_capturing_view_subject"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/results_capturing_view_text_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingLeft="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_capturing_view_body"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/results_capturing_view_text_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:paddingLeft="18dp" />

            <Button
                android:id="@+id/results_capturing_view_button_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_menu_compose"
                android:gravity="center"
                android:text="@string/results_capturing_view_send" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>