<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?sap_gray_black_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/side_padding"
            android:paddingRight="@dimen/side_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/finished_line_padding_half"
                android:paddingTop="@dimen/finished_line_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/race_summary_title"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_header_text_size"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:background="?black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/finished_line_padding_half"
                android:paddingBottom="@dimen/finished_line_padding_half">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/race_summary_start"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"/>

                <ImageView
                    android:id="@+id/edit_race_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin_half"
                    android:layout_marginRight="@dimen/default_margin_half"
                    android:src="?create"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/race_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="11:00:00"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/finished_line_padding_half"
                android:paddingBottom="@dimen/finished_line_padding_half">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/race_summary_finish_begin"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"/>

                <ImageView
                    android:id="@+id/edit_race_finish_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin_half"
                    android:layout_marginRight="@dimen/default_margin_half"
                    android:src="?create"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/race_finish_begin_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="11:12:18"/>

                <TextView
                    android:id="@+id/race_finish_begin_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="12' 18"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/finished_line_padding_half"
                android:paddingTop="@dimen/finished_line_padding_half">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/race_summary_finish_end"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"/>

                <ImageView
                    android:id="@+id/edit_race_finish_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin_half"
                    android:layout_marginRight="@dimen/default_margin_half"
                    android:src="?create"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/race_finish_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="11:16:36"/>

                <TextView
                    android:id="@+id/race_finish_end_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="16' 36"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/finished_line_padding_half"
                android:paddingTop="@dimen/finished_line_padding_half">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/race_summary_finish_duration"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"/>

                <TextView
                    android:id="@+id/race_finish_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="?white"
                    android:textSize="@dimen/finished_default_text_size"
                    tools:text="04' 18"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/region_wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_line"
                    android:layout_marginBottom="@dimen/default_margin_half"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:background="?black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/finished_line_padding_half"
                    android:paddingTop="@dimen/finished_line_padding_half">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:text="@string/race_summary_wind_direction"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"/>

                    <TextView
                        android:id="@+id/wind_direction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"
                        tools:text="from 192Â°"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/finished_line_padding_half"
                    android:paddingTop="@dimen/finished_line_padding_half">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:text="@string/race_summary_wind_speed"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"/>

                    <TextView
                        android:id="@+id/wind_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"
                        tools:text="6.5 kts"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/region_individual_recalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_line"
                    android:layout_marginBottom="@dimen/default_margin_half"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:background="?black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/finished_line_padding_half"
                    android:paddingBottom="@dimen/finished_line_padding_half">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/race_summary_individual_recalls"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:textColor="?white"
                        android:textSize="@dimen/finished_default_text_size"
                        tools:text="AUT 553  GER 766  ITA 912"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>