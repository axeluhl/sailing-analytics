<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="AppTheme.Custom">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:tabWidgetStyle">@style/AppTheme.Light.TabWidget</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">?white</item>
        <item name="drawerArrowStyle">@style/AppTheme.Light.Widget.DrawerArrowStyle</item>
        <item name="editText">@style/AppTheme.Light.EditText</item>
        <item name="android:editTextColor">?white</item>

        <!-- style attributes for popup menu -->
        <item name="android:popupMenuStyle">@style/AppTheme.Light.PopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>

        <!-- custom attributes because of custom themes -->
        <!-- colors -->
        <item name="black">@color/black</item>
        <item name="sap_blue_1">@color/constant_sap_blue_1</item>
        <item name="sap_gray">@color/light_sap_gray</item>                   <!-- ripple -->
        <item name="sap_gray_black_20">@color/light_sap_gray_black_20</item>
        <item name="sap_gray_black_30">@color/light_sap_gray_black_30</item> <!-- bg -->
        <item name="sap_gray_black_40">@color/light_sap_gray_black_40</item>
        <item name="sap_gray_white_10">@color/light_sap_gray_white_10</item>
        <item name="sap_gray_white_20">@color/light_sap_gray_white_20</item>
        <item name="sap_light_gray">@color/light_sap_light_gray</item>      <!-- unselected -->
        <item name="sap_red_1">@color/constant_sap_red_1</item>
        <item name="sap_yellow_1">@color/constant_sap_yellow_1</item>
        <item name="white">@color/white_light</item>                        <!-- selected / init -->
        <item name="white_invert">@color/constant_white</item>

        <!-- styles -->
        <item name="button">@style/AppTheme.Button</item>
        <item name="buttonSolidXSmall">@style/AppTheme.Light.Button.XSmall</item>
        <item name="buttonSolidSmall">@style/AppTheme.Light.Button.Small</item>
        <item name="buttonSolidNormal">@style/AppTheme.Light.Button.Normal</item>
        <item name="checkedItemBackground">@drawable/checked_item_background</item>
        <item name="round">@style/AppTheme.Round</item>
        <item name="round_transparent">@style/AppTheme.RoundTransparent</item>
        <item name="text">@style/AppTheme.Text</item>
        <item name="textXXSmall">@style/AppTheme.Text.XXSmall</item>
        <item name="textXSmall">@style/AppTheme.Text.XSmall</item>
        <item name="textSmall">@style/AppTheme.Text.Small</item>
        <item name="textNormal">@style/AppTheme.Text.Normal</item>
        <item name="textLarge">@style/AppTheme.Text.Large</item>
        <item name="textXLarge">@style/AppTheme.Text.XLarge</item>

        <item name="textHeader">@style/AppTheme.Text.Header</item>
        <item name="textPanelCaption">@style/AppTheme.Text.PanelCaption</item>
        <item name="textPanelHeader">@style/AppTheme.Text.PanelHeader</item>
        <item name="floatLabel">@style/AppTheme.Text.FloatLabel</item>

        <item name="factor_background">@drawable/factor_background</item>

        <!-- drawables -->
        <item name="add">@drawable/ic_add</item>
        <item name="access_time_18dp">@drawable/ic_access_time_black_18dp</item>
        <item name="access_time_24dp">@drawable/ic_access_time_black_24dp</item>
        <item name="access_time_36dp">@drawable/ic_access_time_black_36dp</item>
        <item name="arrow_down">@drawable/arrow_down</item>
        <item name="arrow_down_large">@drawable/arrow_down_large</item>
        <item name="arrow_down_normal">@drawable/arrow_down_normal</item>
        <item name="arrow_drop_down_24dp">@drawable/ic_arrow_drop_down_grey_600_24dp</item>
        <item name="arrow_up">@drawable/arrow_up</item>
        <item name="arrow_up_large">@drawable/arrow_up_large</item>
        <item name="arrow_up_normal">@drawable/arrow_up_normal</item>
        <item name="button_filled_bordered">@drawable/button_filled_bordered</item>
        <item name="button_next">@drawable/button_next</item>
        <item name="button_prev">@drawable/button_prev</item>
        <item name="check_18dp">@drawable/ic_check_black_18dp</item>
        <item name="check_24dp_invert">@drawable/ic_check_white_24dp</item>
        <item name="chevron_left_24dp">@drawable/ic_chevron_left_black_24dp</item>
        <item name="clear_24dp">@drawable/ic_clear_black_24dp</item>
        <item name="create">@drawable/ic_create</item>
        <item name="compass_back">@drawable/compass_back</item>
        <item name="compass_needle">@drawable/compass_needle</item>
        <item name="course_triangle_48dp">@drawable/course_triangle_48dp</item>
        <item name="course_triangle_64dp">@drawable/course_triangle_64dp</item>
        <item name="course_updown_48dp">@drawable/course_updown_48dp</item>
        <item name="course_updown_64dp">@drawable/course_updown_64dp</item>
        <item name="dns">@drawable/ic_dns_black</item>
        <item name="flag_18dp">@drawable/ic_flag_black_18dp</item>
        <item name="flag_24dp">@drawable/ic_flag_black_24dp</item>
        <item name="hearing">@drawable/ic_hearing_black</item>
        <item name="link_24dp">@drawable/ic_link_black_24dp</item>
        <item name="list_both_24dp">@drawable/ic_list_both_black_24dp</item>
        <item name="list_single_24dp">@drawable/ic_list_single_black_24dp</item>
        <item name="lock_outline">@drawable/ic_lock_outline_black</item>
        <item name="keyboard_control_36dp">@drawable/ic_keyboard_control_black_36dp</item>
        <item name="marker">@drawable/marker</item>
        <item name="marker_race">@drawable/marker_race</item>
        <item name="mic_48dp">@drawable/ic_mic_black_48dp</item>
        <item name="photo_camera">@drawable/ic_photo_camera_black</item>
        <item name="play_arrow_36dp">@drawable/ic_play_arrow_black_36dp</item>
        <item name="search_24dp">@drawable/ic_search_black_24dp</item>
        <item name="search_24dp_invert">@drawable/ic_search_white_24dp</item>
        <item name="sortby_24dp">@drawable/ic_sortby_black_24dp</item>
        <item name="spinner_background">@drawable/spinner_background</item>
        <item name="swipe_idle">@drawable/swipe_idle</item>
        <item name="swipe_left">@drawable/swipe_left</item>
        <item name="swipe_right">@drawable/swipe_right</item>
        <item name="tab_widget">@drawable/tabwidget</item>
        <item name="value_next">@drawable/value_next</item>
        <item name="value_prev">@drawable/value_prev</item>
        <item name="wind_off">@drawable/wind_off</item>
        <item name="wind_on">@drawable/wind_on</item>

        <item name="flag_ap_alpha_96dp">@drawable/flag_ap_alpha_96dp</item>
        <item name="flag_ap_hotel_96dp">@drawable/flag_ap_hotel_96dp</item>
        <item name="flag_november_alpha_96dp">@drawable/flag_november_alpha_96dp</item>
        <item name="flag_november_hotel_96dp">@drawable/flag_november_hotel_96dp</item>
    </style>

    <style name="AppTheme.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="chevron_left">@drawable/ic_chevron_left_black_24dp</item>
        <item name="chevron_right">@drawable/ic_chevron_right_black_24dp</item>
        <item name="competitor_list">@drawable/ic_list_single_black_48dp</item>

        <item name="flag_blue_first">@drawable/flag_blue_first_32dp_layer</item>
        <item name="flag_blue_last">@drawable/flag_blue_last_32dp_layer</item>

        <item name="flags_abandon">@drawable/flags_abandon_64dp</item>
        <item name="flags_blue_first">@drawable/flag_blue_first_64dp_layer</item>
        <item name="flags_blue_last">@drawable/flag_blue_last_64dp_layer</item>
        <item name="flags_course">@drawable/flags_course_64dp</item>
        <item name="flags_postpone">@drawable/flags_postpone_64dp</item>
        <item name="flags_recall">@drawable/flags_recall_64dp</item>

        <item name="list_24dp">?attr/list_single_24dp</item>
    </style>

    <style name="AppTheme.Light.PopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/constant_black</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/constant_black</item>
    </style>

    <style name="AppTheme.Light.Widget.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="AppTheme.Round">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:padding">@dimen/logout_padding</item>
    </style>

    <style name="AppTheme.RoundTransparent">
        <item name="android:background">@drawable/round_button_transparent</item>
        <item name="android:padding">@dimen/logout_padding</item>
    </style>

    <!-- custom styles -->
    <style name="AppTheme.Light.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">?white</item>
        <item name="android:textColorHint">?sap_light_gray</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textColor">@color/constant_white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Default">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/default_padding_half</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding_half</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>

    <style name="AppTheme.Light.Button.XSmall" parent="AppTheme.Button.Default">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Light.Button.Small" parent="AppTheme.Button.Default">
        <item name="android:textSize">@dimen/textSize_22</item>
    </style>

    <style name="AppTheme.Light.Button.Normal" parent="AppTheme.Button.Default">
        <item name="android:textSize">@dimen/textSize_26</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">?white</item>
    </style>

    <style name="AppTheme.Text.FloatLabel">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Text.XXSmall">
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <style name="AppTheme.Text.XSmall">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Text.Small">
        <item name="android:textSize">@dimen/textSize_22</item>
    </style>

    <style name="AppTheme.Text.Normal">
        <item name="android:textSize">@dimen/textSize_26</item>
    </style>

    <style name="AppTheme.Text.Large">
        <item name="android:textSize">@dimen/textSize_32</item>
    </style>

    <style name="AppTheme.Text.XLarge">
        <item name="android:textSize">@dimen/textSize_40</item>
    </style>

    <style name="AppTheme.Text.Header" parent="AppTheme.Text.Normal">
        <item name="android:textSize">@dimen/textSize_20</item>
    </style>

    <style name="AppTheme.Text.PanelHeader">
        <item name="android:textColor">?sap_light_gray</item>
        <item name="android:textSize">@dimen/panel_button_header_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Text.PanelCaption">
        <item name="android:textSize">@dimen/panel_button_caption_size</item>
    </style>

    <style name="AppTheme.Light.SettingsAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">@color/dialog_color_text</item>
        <item name="android:textColorSecondary">@color/dialog_color_text</item>
        <item name="colorAccent">@color/dialog_color_button</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Light.TabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/AppTheme.Light.TabWidgetText</item>
    </style>

    <style name="AppTheme.Light.TabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/textSize_32</item>
        <item name="android:textColor">?white</item>
    </style>

</resources>