<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin_half"
            tools:src="@drawable/flag_blue_96dp"/>

        <TextView
            android:id="@+id/first_vessel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin_half"
            android:text="@string/finishing_started"
            android:textAppearance="?attr/textNormal"
            android:textSize="@dimen/finishing_text_size"/>

        <TextView
            android:id="@+id/first_vessel_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:text="@string/finishing_started_since"
            android:textAppearance="?attr/textNormal"
            android:textSize="@dimen/finishing_text_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin_half"
            android:src="?attr/arrow_down_normal"/>

        <include layout="@layout/race_finishing_button" />

        <include layout="@layout/race_finishing_revoke_button" />

    </LinearLayout>
</RelativeLayout>