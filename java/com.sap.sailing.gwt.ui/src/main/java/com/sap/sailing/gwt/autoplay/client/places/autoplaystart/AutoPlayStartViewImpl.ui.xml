<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sse.gwt.client.sapheader"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:style>
    .row {
    	padding-bottom: 1em;
    }
    
    .perspectiveConfigurationPanel {
    	width: 100%;
    }
    
    .headline {
    	background-color: #eeeeee;
    	margin-top: 1em;
    	margin-bottom: 1em;
    }
    </ui:style>
    <g:HTMLPanel>
        <div style="height:6em;" />
        <div class="{res.mediaCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span><ui:text from='{i18n.chooseALanguage}' />:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="localeSelectionBox" />
	        </div>
        </div>
        <div class="{res.mediaCss.grid} {style.row}">
            <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
                <span><ui:text from='{i18n.chooseAAutoplayConfiguration}' />:</span>
            </div>
            <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
                <g:ListBox ui:field="configurationSelectionBox" />
            </div>
        </div>
		<div class="{res.mediaCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span><ui:text from='{i18n.event}' />:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="eventSelectionBox" />
	        </div>
		</div>
		<div ui:field="leaderboardSelectionUi" class="{res.mediaCss.grid}  {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span><ui:text from='{i18n.leaderboard}' />:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="leaderboardSelectionBox" />
	        </div>
		</div>
        
        <div>
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				   &nbsp; 
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
                    <g:Button ui:field="settingsButton" text="{i18n.settings}" styleName="{res.mainCss.button}" />
		        </div>
			</div>
             <div style="height:2em;" />
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.columns}"><hr/></div>
			</div>			
             <div style="height:2em;" />
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    &nbsp;
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
		    		<g:Button ui:field="startAutoPlayButton" text="{i18n.startAutoplay}" styleName="{res.mainCss.button}" />
		    		<g:Anchor ui:field="configStarter"/>
			    </div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>    
