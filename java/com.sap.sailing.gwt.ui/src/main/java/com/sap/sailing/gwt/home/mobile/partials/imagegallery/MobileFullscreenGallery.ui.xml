<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="shr" type="com.sap.sailing.gwt.home.shared.resources.SharedHomeResources" />
	<ui:style gss="true" type="com.sap.sailing.gwt.home.mobile.partials.imagegallery.MobileFullscreenGallery.Style">
		.popup {
			position: fixed !important;
			top: 0;
			bottom: 0;
			left: 0;
			right: 0;
			background-color: rgba(0,0,0,0.9);
			z-index: 5;
		}
		.actionContainer {
			text-align: right;
		}
		.action {
			height: 50px;
			width: auto;
			cursor: pointer;
			padding: 10px;
		}
		.container {
			width: 100%;
			height: 100%;
		}
		.content {
			overflow: auto !important;
		}
		.is_autoplaying {
		  	background-color: #f0ab00;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0" bottom="0">
			<g:SimpleLayoutPanel styleName="{style.container}" ui:field="contentUi" />
		</g:layer>
		<g:layer top="0" right="0" width="100px" height="50px">
			<g:FlowPanel addStyleNames="{style.actionContainer}">
				<g:Image url="{shr.reload.getSafeUri.asString}" styleName="{style.action}" ui:field="autoplayActionUi"/>
				<g:Image url="{shr.close.getSafeUri.asString}" styleName="{style.action}" ui:field="closeActionUi"/>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 