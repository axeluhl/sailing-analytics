<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.regattaheader.EventRegattaHeaderResources" />
    <g:HTMLPanel>

<!-- The regatta header contains basic regatta information and the regatta navigation-->
<div class="{local_res.css.eventregattaheader}">

  <div class="{local_res.css.regatta}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
          <div class="{local_res.css.regatta_intro}"><img src="images/home/regatta-boatclass_sample.png" alt="" height="140" width="140" class="{local_res.css.regatta_intro_image}"></img>
          <div class="{local_res.css.regatta_intro_header}">
              <g:Anchor ui:field="regattaRacesLink">
	              <h3 class="{local_res.css.regatta_intro_header_name}"><span ui:field="regattaName" /></h3>
	              <div ui:field="isLiveDiv" data-labeltype="" class="{res.mainCss.label}"><ui:text from='{i18n.live}'/></div>
              </g:Anchor>
            <div class="{local_res.css.regatta_intro_header_labels}">
              <div data-labeltype="ess" class="{res.mainCss.label}"><span ui:field="leaderboardGroupName" /></div>
            </div>
          </div>
          <div class="{local_res.css.regatta_intro_meta}">Phase
            <div class="{local_res.css.regatta_intro_meta_scoring}"><span ui:field="regattaPhase" />
            </div>
            <div class="{local_res.css.regatta_intro_meta_leaderboardlink}">
                <g:Anchor ui:field="leaderboardLink">Leaderboard</g:Anchor>
			</div>
          </div>
          <div class="{local_res.css.regatta_intro_races}">
            <div data-finished="race.finished" class="{local_res.css.regatta_intro_races_race}"></div>
          </div>
          <div class="{local_res.css.regatta_intro_details}">
            <div class="{local_res.css.regatta_intro_details_item}">
              <div class="{local_res.css.regatta_intro_details_item_sub}">&nbsp;<span class="{local_res.css.regatta_intro_details_item_value}"><span ui:field="competitorsCount" /></span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- 
<div class="{local_res.css.regattanavigation}">
  <div class="{res.mainCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}"><a href="event-regatta-schedule.html" class="{local_res.css.regattanavigation_link}"><ui:text from='{i18n.eventRegattaHeaderRaceSchedule}'/></a>
    </div>
  </div>
</div>
 -->

    </g:HTMLPanel>
</ui:UiBinder>
