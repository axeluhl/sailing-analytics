<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.header.EventHeaderResources" />
    <ui:style>
        .action {
		  float: right;
          text-align: center;
          text-transform: uppercase;
          cursor: pointer;
		  margin-top: 0.5em;
          margin-bottom: 0.5em;
		}
        .action_link {
          background-color: #008FCC;
          color: white;
        }
        .action_link:hover {
         background-color: #0177ab;
        }
    </ui:style>
    <g:HTMLPanel>

        <!-- The header of an event including the event navigation-->
<div ui:field="eventHeaderWrapperDiv" data-navigationtype="normal" class="{local_res.css.eventheaderwrapper}">
  <div class="{local_res.css.eventheader}">
    <div class="{res.mediaCss.grid}">
      <div class="{res.mediaCss.small9} {res.mediaCss.large8} {res.mediaCss.columns}">
        <div class="{local_res.css.eventheader_intro}">
          <div class="{local_res.css.eventheader_intro_logo}"><img ui:field="eventLogo" alt="" class="{local_res.css.eventheader_intro_logo_image}"></img></div>
          <h3 class="{local_res.css.eventheader_intro_name}"><span ui:field='eventNameSpan' /></h3>
          <div ui:field="isLiveDiv" data-labeltype="live" class="{res.mainCss.label}"><ui:text from='{i18n.live}'/></div>
          <div ui:field="isFinishedDiv" data-labeltype="finished" class="{res.mainCss.label}"><ui:text from='{i18n.finished}'/></div>
          <div class="{local_res.css.eventheader_intro_details}">
            <div ui:field="regattaNameInSeriesDiv" class="{local_res.css.eventheader_intro_details_item}"></div>
            <div ui:field="eventDateDiv" class="{local_res.css.eventheader_intro_details_item}"></div>
            <div class="{local_res.css.eventheader_intro_details_item}">
                <img src="images/home/location-icon.png" class="{local_res.css.locationicon}"></img>
                <span ui:field='venueNameSpan' />
            </div>
           	<g:Anchor ui:field="officalWebsiteAnchor" href="javascript:;" target="_blank" styleName="{local_res.css.eventheader_intro_details_item} {local_res.css.eventheader_intro_details_itemlink}" />
          </div>
          <div ui:field="eventDescriptionDiv" class="{local_res.css.eventheader_intro"></div>
        </div>
      </div>
      <div class="{res.mediaCss.small3} {res.mediaCss.large4} {res.mediaCss.columns}">
        <div class="{local_res.css.eventheader_sharing}">
            <g:Anchor ui:field="twitterAnchor" title="{i18n.sharingTwitter}" target="_blank" styleName="{local_res.css.eventheader_sharing_item} {local_res.css.eventheader_sharing_itemtwitter}"></g:Anchor>
            <g:Anchor ui:field="facebookAnchor" title="{i18n.sharingFacebook}" target="_blank" styleName="{local_res.css.eventheader_sharing_item} {local_res.css.eventheader_sharing_itemfacebook}"></g:Anchor>
        </div>
        <div ui:field="seriesLeaderboardDiv" class="{local_res.css.eventheader_sharing}">
            <div class="{style.action}">
               <g:Anchor ui:field="seriesLeaderboardAnchor" styleName="{res.mainCss.button} {style.action_link}"><ui:text from='{i18n.overallLeaderboard}'/></g:Anchor>
            </div>
		</div>	          
      </div>
    </div>
  </div>
  <div class="{local_res.css.eventnavigation} {local_res.css.eventnavigationcompact}">
    <div class="{res.mediaCss.grid}">
        <div class="{res.mediaCss.columns}">
            <g:Anchor ui:field="regattasLink">
              	<img ui:field='eventLogo2' alt="" height="41" width="41" class="{local_res.css.eventnavigationcompact_logo}"></img>
			</g:Anchor>
            <g:Anchor ui:field="regattasLink2" styleName="{res.mainCss.button} {local_res.css.eventnavigation_link}">
                <span ui:field='eventName2Span' />
            </g:Anchor>
      </div>
    </div>
  </div>
  <!-- 
  <div class="{local_res.css.eventnavigation} {local_res.css.eventnavigationcompactfloating}">
    <div class="{res.mediaCss.grid}">
      <div class="{res.mediaCss.columns}">{#if navigation.isEvent}<a href="event-overview.html"><img src="images/{event.logo}" alt="" height="41" width="41" class="{local_res.css.eventnavigationcompact_logo}"></img></a><a href="event-overview.html" class="{res.mainCss.button} {local_res.css.eventnavigation_link}">{event.name}</a>{/if navigation.isEvent}{#if navigation.isSeries}<a href="series-overview.html"><img src="images/{event.logo}" alt="" height="41" width="41" class="{local_res.css.eventnavigationcompact_logo}"></img></a><a href="series-overview.html" class="{res.mainCss.button} {local_res.css.eventnavigation_link}">{event.name}</a>
      </div></s>
    </div>
  </div>
   -->
</div>
</g:HTMLPanel>
</ui:UiBinder>
