<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
    xmlns:sse="urn:import:com.sap.sse.gwt.client.controls"
    >
	<ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.mainmedia.MainMediaResources" />
 <g:HTMLPanel>
  <!-- Partial for media like image and video -->
  <div class="{res.mainCss.mainsection} {local_res.css.media}">
   <div class="{res.mediaCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
     <header class="{res.mainCss.mainsection_header}">
      <h3 class="{res.mainCss.mainsection_header_title}">
       <ui:text from='{i18n.mainMediaTitle}' />
      </h3>
      <p>
       <ui:text from='{i18n.mainMediaSubtitle}' />
      </p>
     </header>
    </div>
   </div>
   <div class="{res.mediaCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
        <sse:carousel.ImageCarousel ui:field="imageCarousel" /> 
    </div>
   </div>
  </div>
  <div
   class="{res.mainCss.mainsection} {local_res.css.media} {local_res.css.mediavideos}">
   <div class="{res.mediaCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
     <header class="{res.mainCss.mainsection_header}">
      <h3 class="{res.mainCss.mainsection_header_title}">
       <ui:text from='{i18n.mainMediaVideosTitle}' />
      </h3>
      <p>
       <ui:text from='{i18n.mainMediaVideosSubtitle}' />
      </p>
     </header>
    </div>
   </div>
   <div class="{res.mediaCss.grid} {res.mainCss.lightbox}">
    <div ui:field="videoLightBoxData" class="{res.mainCss.lightbox_content}"></div>
    <g:HTMLPanel ui:field="videosPanel" />
   </div>
  </div>
 </g:HTMLPanel>
</ui:UiBinder>
