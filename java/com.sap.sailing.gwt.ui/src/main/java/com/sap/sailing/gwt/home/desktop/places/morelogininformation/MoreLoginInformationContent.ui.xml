<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:style field="style" type="com.sap.sailing.gwt.home.desktop.places.morelogininformation.MoreLoginInformationContent.Styles">
        .clear {
            clear: both;
        }

        .image {
            width: 40%;
            height: auto;
        }

        .image.left {
            float: left;
            padding-right: 1em;
        }

        .image.right {
            float: right;
            padding-left: 1em;
        }

        .wrapper {
            padding: 1em 0;
        }

        .title {
            font-size: 1.5em;
            font-weight: bold;
            padding-bottom: 0.5em;
        }
    </ui:style>
    <div class="{style.wrapper}">
        <img ui:field="imageUi" class="{style.image}" />
        <h2 ui:field="titleUi" class="{style.title}" />
        <div ui:field="textUi" />
        <div class="{style.clear}" />
    </div>
</ui:UiBinder>
