<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c="urn:import:com.sap.sailing.gwt.common.client.controls.tabbar"
	xmlns:b="urn:import:com.sap.sse.gwt.client.controls.busyindicator">
	<ui:with field="res"
		type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
	.header {
		position: relative;
		font-size: 1rem;
		color: #666;
		background: #f2f2f2;
		border-bottom: 1px solid #dedede;
	}
	
	.content {
		width: 100%;
		height: 100%;
	}
	
	.navigation {
		/* font-size: 0; */
		margin-bottom: -1px;
	}
	
	.tabExtension {
		float: right;
		margin-top: .5em;
	}
	
	.tabExtension > * {
		margin-left: 0.5em;
	}
	</ui:style>
	<g:FlowPanel>
		<g:HTMLPanel addStyleNames="{style.header}">
			<g:SimplePanel ui:field="additionalHeader" />
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
					<g:FlowPanel ui:field="tabExtension" addStyleNames="{style.tabExtension}" />
					<c:TabBar ui:field="tabBar" addStyleNames="{style.navigation}" />
				</div>
			</div>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="tabContentPanelUi" addStyleNames="{style.content}" />
	</g:FlowPanel>
</ui:UiBinder>