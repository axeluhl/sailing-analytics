<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.sap.sailing.gwt.common.client.controls.tabbar">
	<ui:with field="res"
		type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
	.header {
		position: relative;
		font-size: 1rem;
		color: #666;
		background: #f2f2f2;
		border-bottom: 1px solid #dedede;
	}
	
	.breadcrumb {
		font-size: 1rem;
		/* @alternate */ font-size: 0.866666666666667em;
		font-weight: 600;
		padding: 0.666666666666667em 0;
	}
	
	.back:hover {
		background-color: #cfcfcf;
	}
	
	.content {
		width: 100%;
		height: 100%;
	}
	
	.navigation {
		/* font-size: 0; */
		margin-bottom: -1px;
	}
	.tabExtension {
		float: right;
		margin-left: 0.5em;
	}
	</ui:style>
	<g:FlowPanel>
		<g:HTMLPanel addStyleNames="{style.header}">
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
					<c:BreadcrumbPane ui:field="breadcrumbs"
						addStyleNames="{style.breadcrumb}" />
				</div>
			</div>
			<g:SimplePanel ui:field="additionalHeader" />
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
					<g:FlowPanel ui:field="tabExtension" addStyleNames="{style.tabExtension}" />
					<c:TabBar ui:field="tabBar"
						addStyleNames="{style.navigation}" />
				</div>
			</div>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="tabContentPanelUi"
			addStyleNames="{style.content}" />
	</g:FlowPanel>
</ui:UiBinder>