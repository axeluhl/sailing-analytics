<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style field="style" type="com.sap.sailing.gwt.home.shared.partials.anniversary.AbstractAnniversaryItem.Style">
        .main {
            padding: 2em 0;
            background-color: #f8f8f8;
            margin-bottom: 1em;
        }
        .content {
            margin: auto;
            max-width: 52em;
            position: relative;
        }
        .symbolContainer {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 11em;
            height: 11em;
            border: 0.2em solid #fff;
            background: #008fcc;
            color: #fff;
            text-align: center;
            padding: 0.666666666666667em 0.333333333333333em;
            border-radius: 0.666666666666667em;
            box-shadow: 0 0 18px rgba(0,0,0,0.13), 0 2px 6px rgba(0,0,0,0.25);
            text-transform: uppercase;
        }
        .icon {
            background-repeat: no-repeat;
            height: 5em;
            margin: 0 2.733333333333333em;
        }
        .count {
            font-weight: bold;
            font-size: 3em;
            line-height: 1em;
        }
        .unit {
            line-height: 1.5em;
            font-size: 1.5em;
        }
        .countdown .count {
            padding-top: .75em
        }
        .countdown .unit {
            line-height: 2em;
        }
        .announcement .count {
            font-size: 2.5em;
        }
        .announcement .unit {
            font-size: 1.25em;
        }
        .textContainer {
            position: relative;
            margin-left: 12.5em;
            min-height: 11em;
            padding: .5em
        }
        .teaser {
            font-size: 1.5em;
            font-weight: bold;
            color: #008fcc;
        }
        .description {
            padding-top: 1em;
        }
        .linkContainer {
            text-align: center;
        }
        .linkContainer > a {
            margin-top: 1em;
        }
        .legalNotice {
            font-size: 1.5em;
            cursor: pointer;
            color: #008fcc;
            line-height: .5em;
            position: absolute;
            padding-top: 0.25em;
        }
    </ui:style>
    <div class="{style.main}">
        <div class="{style.content}">
            <div class="{style.symbolContainer}">
	            <div ui:field="iconUi" class="{style.icon}"></div>
                <div ui:field="countUi" class="{style.count}"></div>
                <div ui:field="unitUi" class="{style.unit}"></div>
            </div>
            <div class="{style.textContainer}">
                <div ui:field="teaserUi" class="{style.teaser}"></div>
                <div class="{style.description}">
                    <span ui:field="descriptionUi"></span>
	                <span ui:field="legalNoticeUi" class="{style.legalNotice}">*</span>
                </div>
            </div>
        </div>
        <div class="{style.linkContainer}">
            <a ui:field="linkUi" target="_blank" class="{res.mainCss.button}">
                <ui:text from="{i18n.anniversaryRaceLinkText}" />
            </a>
        </div>
    </div>
</ui:UiBinder> 