<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
    xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials"
    xmlns:sp="urn:import:com.sap.sailing.gwt.home.shared.partials"
    xmlns:p="urn:import:com.sap.sailing.gwt.home.mobile.places.event"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >
    <ui:with 
        field="res" 
        type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
        .headerWrapper {
            background-color: #f2f2f2;
            padding-bottom: 10px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.headerWrapper}">
            <mp:seriesheader.SeriesHeader ui:field="eventHeaderUi" />
            <mp:quickfinder.Quickfinder ui:field="quickFinderUi" />
        </div>
        <g:FlowPanel ui:field="eventsUi" />
        <mp:minileaderboard.MinileaderboardBox ui:field="leaderboardUi"/>
        <sp:statistics.EventStatisticsBox ui:field="statisticsBoxUi" />
    </g:HTMLPanel>
</ui:UiBinder>
