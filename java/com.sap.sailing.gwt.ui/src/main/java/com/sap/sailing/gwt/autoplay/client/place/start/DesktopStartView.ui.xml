<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.autoplay.client.shared"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
    <ui:style>
		.row {
			padding-bottom:1em;
		}
		.perspectiveConfigurationPanel {
			width: 100%;
		}
		.headline {
			background-color: #eeeeee;
			margin-top: 1em;
			margin-bottom: 1em;
		}
    </ui:style>
    <g:HTMLPanel>
        <s:header.SAPHeader ui:field="sapHeader" />
        <div style="height:1em;" />
        <div class="{res.mediaCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Display language:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="localeSelectionBox" />
	        </div>
        </div>
		<div class="{res.mediaCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Event:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="eventSelectionBox" />
	        </div>
		</div>
		<div ui:field="leaderboardSelectionUi" class="{res.mediaCss.grid}  {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Leaderboard:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="leaderboardSelectionBox" />
	        </div>
		</div>
        
        <div ui:field="screenConfigurationUi">
			<div class="{res.mediaCss.grid} {style.row} {style.headline}">
				<div class="{res.mediaCss.columns}">Screen size and zoom</div>
			</div>			
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    <span>Start browser in full screen mode:</span>
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
					<g:CheckBox ui:field="startInFullscreenModeBox" />
		        </div>
			</div>
			<div class="{res.mediaCss.grid} {style.row} {style.headline}">
				<div class="{res.mediaCss.columns}">Screen switching</div>
			</div>			
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    <span>Switch automatically to live race:</span>
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
					<g:CheckBox ui:field="autoSwitchToRaceboard" />
		        </div>
			</div>
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    <span>...when to start is less than (in s):</span>
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
					<g:TextBox ui:field="timeToRaceStartInSeconds" />
		        </div>
			</div>
			<div class="{res.mediaCss.grid} {style.row} {style.headline}">
				<div class="{res.mediaCss.columns}">Viewer Settings</div>
			</div>
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    <span>Leaderboard Viewer:</span>
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
					<g:FlowPanel ui:field="leaderboardPerspectiveSettingsPanel" />
		        </div>
			</div>
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    <span>Race Viewer:</span>
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
					<g:FlowPanel ui:field="raceboardPerspectiveSettingsPanel" />
		        </div>
			</div>
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.columns}"><hr/></div>
			</div>			
			<div class="{res.mediaCss.grid} {style.row}">
				<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
				    &nbsp;
		        </div>
			    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
		    		<g:Button ui:field="startAutoPlayButton" text="Start autoplay" styleName="{res.mainCss.button}" />
			    </div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>    
